/**index.wxss**/
.welcome{
  width: 100%;
  height: 100%;
  background-color: #fff;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  color: #454545;
  position: relative
}
.welcome>image{
  position: absolute;
  width: 100%;
  height: 100%;
  top:0;
  left: 0;
}
.alertinfo,.usermotto{
  margin-top: 10%;
  padding: 0 30rpx;
  box-sizing: border-box;
  font-size: 18px;
  text-align: center;
  width: 100%;
}
.userinfo{
  position: absolute;
  top: 60%;
  left: 50%;
  transform: translateX(-50%);
  display: flex;
  box-sizing: border-box;
  flex-direction: column;
  margin-top: 40rpx;
  padding: 0 30rpx;
  justify-content: space-between;
  align-items: center;
}
.userinfo button{
  flex: 1;
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 18px;
  background-color: #f58220;
  color: #fff;
  border-radius: 60rpx;
}
.userinfo input{
  flex: 0 0 40%;
  text-align: center;
  margin-top: 10rpx;
  border: 1px solid #f58220;
  padding: 0 20rpx;
  height: 60rpx;
  font-size: 18px;
  z-index: 10;
  border-radius: 60rpx;
}
.begin-order{
  position: absolute;
  top:75%;
  left: 50%;
  transform: translateX(-50%);
  text-align: center;
  margin-top: 40rpx;
  color: #f58220;
  font-size: 20px;
  width: 100%;
}
.btn-modal{
  position: absolute;
  top: 10px;
  left: 10px;
}